{
    "pipeline":[
        {
            "type": "readers.las",
            "filename": "filepath_sensed_pointcloud.laz"
        },
        {
            "type":"filters.assign",
            "value": [
            "X = X-ESTIMATED_SHIFT_in_X_dir",
            "Y = Y-ESTIMATED_SHIFT_in_Y_dir",
            "Z = Z-ESTIMATED_SHIFT_in_Z_dir"
        ]
        },
    {
        "type": "filters.ferry",
        "dimensions": "=>OriginalCloudIndex"
    },
    {
        "type": "filters.assign",
        "assignment": "OriginalCloudIndex[:]=4"
    },
        {
            "type": "writers.las",
            "filename": "filepath_shifted_pointcloud.laz",
        "extra_dims": "OriginalCloudIndex=int8"
 
        }
    ]
}
